@keyframes swimRight {
    0% { transform: translateX(0); }
    50% { transform: translateX(100vw); }
    100% { transform: translateX(0); }
}

@keyframes swimLeft {
    0% { transform: translateX(0); }
    50% { transform: translateX(-100vw); }
    100% { transform: translateX(0); }
}

.diver {
    animation: swimRight 10s linear infinite;
}

.shark {
    animation: swimLeft 7s linear infinite;
}

.turtle {
    animation: swimLeft 15s linear infinite;
}
